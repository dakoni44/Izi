<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".nav_fragments.HomeFragment">

        <RelativeLayout
            android:id="@+id/topLo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/bnavPost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_bg"
                android:fitsSystemWindows="true"
                android:outlineSpotShadowColor="@android:color/white"
                app:labelVisibilityMode="unlabeled"
                >

                <ImageView
                    android:id="@+id/ivMessage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_message"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"/>

                <ImageView
                    android:id="@+id/ivList"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_img"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="35dp"/>

                <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:textSize="20sp"
                    android:text="IZI"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>
        </RelativeLayout>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="1.65"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topLo"
            app:layout_constraintBottom_toBottomOf="@id/bottomg"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>